<div class="row">
 <% @recipes.each do |recipe| %>
  <div class="col-md-4">
   <div>
    <img  class="mr-2 rounded" src='<%= recipe.image %>'>
    <br>
    <h4><%= link_to recipe.title, recipe_path(recipe) %></h4>
    <p>by：<%= link_to recipe.user.name, user_path(recipe.user) %></p>        
    <p>調理時間：<%= recipe.cooking_time %></p>
   </div>
  </div>
 <% end %>
</div>