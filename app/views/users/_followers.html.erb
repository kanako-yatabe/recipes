<% if followers.any? %>
  <ul class="list-unstyled">
    <% followers.each do |user| %>
      <li class="media">
        <% if @user.image %>
            <img  class="mr-2 rounded" src='<%= @user.image %>'>
          <% else %>
            <%= image_tag @user.image_icon.url, class:"user-icon" %>
        <% end %>  
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate followers %>
<% end %>
