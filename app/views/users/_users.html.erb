<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.image %>
            <img  class="mr-2 rounded" src='<%= user.image %>'>
          <% else %>
            <image  class="mr-2 rounded" src="../../assets/images/default_icon.png">
        <% end %>  
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>