              <li class="dropdown-item"><%= link_to 'レシピを書く', new_recipe_path(current_user), class: 'wf-sawarabigothic nav-item' %></li>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'wf-sawarabigothic nav-item' %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to '会員登録', signup_path, class: 'wf-roundedmplus1c header-tab left-tab' %></li>
          <li><%= link_to 'ログイン', login_path, class: 'wf-roundedmplus1c header-tab' %></li>
        <% end %>
      </ul>
    </div>
